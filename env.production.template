# Production Environment Variables Template
# Copy this file to .env and fill in your production values

# OpenAI Configuration
OPENAI_API_KEY=your_production_openai_api_key_here
MODEL_NAME=gpt-5  # Use gpt-5 for best performance, gpt-4o-mini for cost optimization

# LangSmith Configuration (for prompt management and tracing)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=application-status-agent-prod
LANGSMITH_PROJECT=application-status-agent-prod
LANGSMITH_API_KEY=your_langsmith_api_key_here

# MCP Server Configuration (your production MCP server)
MCP_SERVER_URL=https://your-production-mcp-server.com
MCP_API_KEY=your_production_mcp_api_key_here

# Optional: Additional configuration
# LANGCHAIN_VERBOSE=true  # Enable verbose logging
# LANGCHAIN_DEBUG=true    # Enable debug mode
